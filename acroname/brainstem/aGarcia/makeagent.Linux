# makefile: host/aGarcia/makegent.Linux

SHELL := /bin/sh
CC := gcc
CCP := g++

ROOT := ../
PROGNAME := aGarciaAgent

INCLUDES := -IaCommon \
	    -IaUnix \
	    -IaGarcia \
	    -IaGarciaAgent \
	    -I../aIO/aCommon \
	    -I../aIO/aUnix \
	    -I../aUI/aCommon \
	    -I../aUI/aUnix \
	    -I../aStem/aCommon \
	    -I../aStem/aUnix \
	    -I../aTEAvm/aCommon \
	    -I../aTEAvm/aUnix \
	    -I../aCommon \
	    -I../aUnix \
	    -I../aDebug/aSystem

# don't include X11 libraries for ARM
ifeq ($(ARCH),ARM)
LIBRARIES := -laIO \
             -laUI \
             -laStem \
	     -laGarcia \
             -lpthread \
	     -lm
else
LIBRARIES := -laIO \
             -laUI \
             -laStem \
	     -laGarcia \
             -lpthread \
	     -lm \
	     -L/usr/X11R6/lib \
	     -lX11
endif

VPATH := aCommon:aUnix:aGarciaAgent:../aCommon:../aTEAvm/aCommon

SOURCES := aAssert.c \
	   aMemHandleDebug.c \
	   aUtil.c \
	   aGarciaGeom.c \
	   aStream_STDIO_Console.c

CPPSOURCES := acpException.cpp \
	      acpGarciaAgent.cpp \
	      stdio_acpGarciaAgent.cpp \
	      stdio_aGarciaAgent.cpp

include $(ROOT)make_program_cpp.Linux
