# makefile: host/aRobot/makegent.Linux

SHELL := /bin/sh
CC := gcc
CCP := g++

ROOT := ../
PROGNAME := aRobotAgent

INCLUDES := -IaCommon \
	    -IaUnix \
	    -IaRobot \
	    -IaRobotAgent \
	    -I../aIO/aCommon \
	    -I../aIO/aUnix \
	    -I../aUI/aCommon \
	    -I../aUI/aUnix \
	    -I../aStem/aCommon \
	    -I../aStem/aUnix \
	    -I../aTEAvm/aCommon \
	    -I../aTEAvm/aUnix \
	    -I../aCommon \
	    -I../aUnix \
	    -I../aDebug/aSystem

#don't include X11 libraries for ARM
ifeq ($(ARCH),ARM)
LIBRARIES := -laIO \
             -laUI \
             -laStem \
	     -laTEAvm \
	     -laRobot \
             -lpthread \
	     -lm
else
LIBRARIES := -laIO \
             -laUI \
             -laStem \
	     -laTEAvm \
	     -laRobot \
             -lpthread \
	     -lm \
	     -L/usr/X11R6/lib \
	     -lX11
endif

VPATH := aCommon:aUnix:aRobotAgent:../aCommon:../aTEAvm/aCommon

SOURCES := aAssert.c \
	   aMemHandleDebug.c \
	   aUtil.c \
	   aStream_STDIO_Console.c

CPPSOURCES := acpException.cpp \
	      acpRobotAgent.cpp \
	   stdio_acpRobotAgent.cpp \
	   stdio_aRobotAgent.cpp

include $(ROOT)make_program_cpp.Linux
