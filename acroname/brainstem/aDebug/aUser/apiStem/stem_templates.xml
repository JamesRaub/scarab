   <APIFILE> "/apiStem/srf08-set-maddr.tea" </APIFILE>
   <INDEX> 0 </INDEX>
   <PARAMSIZE> 2 </PARAMSIZE>
   <CONVFAC> 1 </CONVFAC>
  </SET>
  <GET>
   <APIFILE> "/apiStem/srf08-get-maddr.tea" </APIFILE>
   <INDEX> 0 </INDEX>
   <PARAMSIZE> 2 </PARAMSIZE>
   <CONVFAC> 1 </CONVFAC>
  </GET>
 </PROPERTY>
 <PROPERTY>
  <NAME> "address" </NAME>
  <DESCRIPTION>
  "I2C address of sonar."
  </DESCRIPTION>
  <TYPE> int </TYPE>
  <SET>
   <APIFILE> "/apiStem/srf08-set-addr.tea" </APIFILE>
   <INDEX> 0 </INDEX>
   <PARAMSIZE> 2 </PARAMSIZE>
   <CONVFAC> 1 </CONVFAC>
  </SET>
  <GET>
   <APIFILE> "/apiStem/srf08-get-addr.tea" </APIFILE>
   <INDEX> 0 </INDEX>
   <PARAMSIZE> 2 </PARAMSIZE>
   <CONVFAC> 1 </CONVFAC>
