#include <aAPI.tea>
#include <aAPIGarcia.tea>

void main(int x)
{
  // subtract offset to center point
  x = x - apiGARCIA_RANGER_OFFSET_FRONT;
  
  x = aGarciaAPI_InvGP2D12(x);

  aAPI_SetTxByte0(cmdPAD_IO);
  aAPI_SetTxByte1(aGARCIA_MOTO_PADS_FRONTTHR);
  aAPI_SetTxShortVar(2, x);
  aAPI_SetTxLength(4);
  aAPI_BeginTx(aGARCIA_MOTO_ADDR);
}
